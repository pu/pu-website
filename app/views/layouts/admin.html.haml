%html

  %head
    %title= "#{controller.controller_name}: #{controller.action_name} |Â ninjaconcept no-brainer webadmin"
    
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "content-type" }/
    %meta{ :content => "false", "http-equiv" => "imagetoolbar" }/
    %link{ "rel" => "shortcut icon", "type" => "image/x-icon",  "href" => "/favicon.ico" }/
    
    = stylesheet_link_merged :admin_base
    = stylesheet_link_tag '/markitup/skins/simple/style.css', '/markitup/sets/html/style.css'
      
