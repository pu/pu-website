    = javascript_include_tag '/markitup/jquery.markitup.pack.js', '/markitup/sets/html/set.js'
    = javascript_include_tag 'jquery-1.3.2.min'
        
    = yield_authenticity_token

  %body
    #container
      
      #header
        
        #logo
          = link_to(image_tag("admin/logo-small.png", :alt => "#{APP_CONFIG[:site_name]}"), admin_path, :title => "#{APP_CONFIG[:site_name]}" )
        
        = render :partial => 'admin/layouts/login_box'
        
        #navigation
          = render_navigation(:context => :admin)
      
      #content_outer
        
        #flash_messages
          - flash.each do |key, value|
            %div{:class => key}= h(value)

        #content
          = yield
      
      = render :partial => 'admin/layouts/footer'
