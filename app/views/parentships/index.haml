- title "Parentships"

%h1
  Liste aller Kinder mit Paten

= render :partial => "layouts/menu"

%table.tablesorter
  %thead
    %tr
      %th.header
        Bild
      %th.header
        Vorname
      %th.header
        Name
      %th.header
        Nr.
      - for l in Letter.recent(2)
        %th.header
          = l.name
      %th.header
        Pate
      %th.header
        Pate
      %th.header
        Adresse
      %th.header
        Adresse
      %th.header
        Telefonnumer
      %th.header
        Email
      %th.header
        Beginn
      %th.header
        Ende
      %th.header
        Beitrag
      %th.header
        Zahlweise
      %th.header{:colspan => "3"}
        Bearbeiten
    %tbody
      - for parentship in @parentships
        %tr
          %td
            = image_tag parentship.kid.picture.url(:thumb)
          %td
            = h parentship.kid.firstname
          %td
            = h parentship.kid.name
          %td
            = h parentship.kid.number

          - for letter in parentship.kid.recent_letters_written
            %td
              = render :partial => "kids/letter_received", :locals => {:letter => letter, :redirect_action => :index}
          %td
            = h parentship.parent.firstname
          %td
            = h parentship.parent.name
          %td
            = h parentship.parent.street
          %td
            = h (parentship.parent.zip_code + " " + parentship.parent.town)
          %td
            = h parentship.parent.phone
          %td
            = h parentship.parent.email
          %td
            = h parentship.starts_at
          %td
            = h parentship.expires_at
          %td
            = h parentship.fee
          %td
            = h parentship.paying_period
          %td
            = link_to "Anzeigen", parentship
          %td
            = link_to "Bearbeiten", edit_parentship_path(parentship)
