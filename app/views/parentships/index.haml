- title "Parentships"

%h1
  Patenschaften

%p
  = link_to "Neue Patenschaft", new_parentship_path
  
%table.tablesorter
  %thead
    %tr
      %th.header
        Bild
      %th.header
        Vorname
      %th.header
        Name
      %th.header
        Nr. 
      - for l in Letter.recent(2)
        %th.header
          = l.name
      %th.header
        Pate
      %th.header 
        Pate
      %th.header
        Beginn
      %th.header
        Ende
      %th.header
        Beitrag
      %th.header
        Zahlweise
      %th.header{:colspan => "3"}
        Bearbeiten
    %tbody
      - for parentship in @parentships
        %tr
          %td 
            = image_tag parentship.kid.picture.url(:thumb)
          %td
            = h parentship.kid.firstname
          %td
            = h parentship.kid.name
          %td
            = h parentship.kid.number
            
          - for l in parentship.kid.recent_letters_written
            %td{ :id => "letter_image_#{l.id}"}
              = image_tag boolean_icon_path(l.received?)
              %div{ :id => "letter_status_#{l.id}"}
                = link_to_remote l.received? ? 'Da' : 'Fehlt', letter_received_path(l.id), :method => :put, :update => "letter_status_#{l.id}"
          %td
            = h parentship.parent.firstname      
          %td
            = h parentship.parent.name
          %td
            = h parentship.starts_at
          %td
            = h parentship.expires_at
          %td
            = h parentship.fee
          %td
            = h parentship.paying_period
          %td
            = link_to "Anzeigen", parentship
          %td
            = link_to "Bearbeiten", edit_parentship_path(parentship)
