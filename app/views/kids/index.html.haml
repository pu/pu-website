- title "Kinder"

%h1#kinder
  Liste aller Kinder


= render :partial => "layouts/menu"

%table.tablesorter
  %thead
    %tr
      %th.header Nummer
      %th.header Bild
      %th.header Vorname
      %th.header Name
      %th.header Beschreibung
      %th.header Schule
      %th.header Klasse
      %th.header Pate
      - for l in Letter.recent(2)
        %th.header
          = l.name
      %th.header{:colspan => "3"} Bearbeiten
  %tbody
    - for kid in @kids
      %tr
        %td
          = h kid.number
        %td
          = image_tag kid.picture.url(:thumb)
        %td
          = h kid.firstname
        %td
          = h kid.name
        %td
          = h truncate(kid.description, 60, "...")
        %td
          = h kid.school.name if kid.school
        %td
          = h kid.school_visit.grade if kid.school

        %td
          = h "#{kid.parents.first.firstname} #{kid.parents.first.name}" if kid.parents.first

        - for letter in kid.recent_letters_written
          %td
            = render :partial => "letter_received", :locals => {:letter => letter, :redirect_action => :index}
        %td
          = link_to 'Anzeigen', kid
        %td
          = link_to 'Bearbeiten', edit_kid_path(kid)
        %td
          = link_to 'Löschen', kid, :confirm => 'Dieses Kind wirklich löschen?', :method => :delete