- title "Kind"

= render :partial => "send_profile_form"

%p
  = image_tag @kid.picture.url(:profile)
%p
  %strong Nummer:
  =h @kid.number
%p
  %strong Vorname:
  =h @kid.firstname
%p
  %strong Name:
  =h @kid.name
%p
  %strong Geburtstag:
  =h @kid.birthday
%p
  %strong Wohnort:
  =h @kid.town
%p
  %strong Beschreibung:
  =h @kid.description
%p
  %strong Status:
  =h @kid.status
%p
  %strong Betreuung bis:
  =h @kid.sponsored_until

%p
  = link_to "Bearbeiten", edit_kid_path(@kid)
  |
  = link_to "Löschen", @kid, :confirm => 'Dieses Kind wirklich löschen?', :method => :delete
  |
  = link_to "Übersicht Kinder", kids_path
