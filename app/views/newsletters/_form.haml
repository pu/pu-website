- form_for @newsletter, :html => { :multipart => true } do |f|
  = f.error_messages
  %p
    = f.label :subject, "Betreff"
    %br
    = f.text_field :subject
  %p
    = f.label :body, "Text"
    %br
    = f.text_area :body
  %p
    = f.label :attachment, "Anhang"
    %br
    = f.file_field :attachment, { :class => 'file' }

  %p
    = f.submit "Speichern"

